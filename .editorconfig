# EditorConfig is awesome: https://EditorConfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.{py,pyi}]
indent_size = 4
max_line_length = 88

[*.{js,ts,json,yaml,yml}]
indent_size = 2

[*.{md,rst}]
trim_trailing_whitespace = false

[*.{v,vh,sv,svh}]
indent_size = 2
max_line_length = 120

[*.{tcl,xdc,sdc}]
indent_size = 2

[Makefile]
indent_style = tab

[*.{sh,bash}]
indent_size = 2